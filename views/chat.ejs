<script>
    // WebSocket 연결 설정
    const ws = new WebSocket('ws://localhost:8765');

    // 메시지 수신 시 처리
    ws.onmessage = function(event) {
        const message = event.data;
        const chatBox = document.querySelector('.chat-box');
        
        // 수신한 메시지를 채팅 UI에 추가
        const messageElement = document.createElement('li');
        messageElement.className = 'chat-left';
        messageElement.innerHTML = `
            <div class="chat-avatar">
                <img src="https://www.bootdey.com/img/Content/avatar/avatar3.png" alt="User">
                <div class="chat-name">User</div>
            </div>
            <div class="chat-text">${message}</div>
            <div class="chat-hour">Now <span class="fa fa-check-circle"></span></div>
        `;
        chatBox.appendChild(messageElement);
    };

    // 메시지 전송 함수
    function sendMessage() {
        const inputElement = document.querySelector('textarea');
        const message = inputElement.value;
        ws.send(message);

        // 보낸 메시지를 채팅 UI에 추가
        const chatBox = document.querySelector('.chat-box');
        const messageElement = document.createElement('li');
        messageElement.className = 'chat-right';
        messageElement.innerHTML = `
            <div class="chat-hour">Now <span class="fa fa-check-circle"></span></div>
            <div class="chat-text">${message}</div>
            <div class="chat-avatar">
                <img src="https://www.bootdey.com/img/Content/avatar/avatar4.png" alt="You">
                <div class="chat-name">You</div>
            </div>
        `;
        chatBox.appendChild(messageElement);

        // 입력 필드 비우기
        inputElement.value = '';
    }

    // 전송 버튼 또는 엔터 키로 메시지 전송
    document.querySelector('textarea').addEventListener('keydown', function(event) {
        if (event.key === 'Enter') {
            event.preventDefault();  // 줄바꿈 막기
            sendMessage();
        }
    });

    // 페이지를 나갈 때 WebSocket 연결 종료
    window.onbeforeunload = function() {
        ws.close();
    };
</script>

